{
  "name": "orca-typescript-sdk",
  "version": "1.0.0",
  "description": "Typescript SDK for the Orca protocol.",
  "main": "dist/index.js",
  "license": "MIT",
  "dependencies": {
    "@solana/spl-token": "^0.1.5",
    "@solana/spl-token-swap": "^0.1.0",
    "@solana/web3.js": "^1.17.0",
    "decimal.js": "^10.3.1"
  },
  "devDependencies": {
    "@types/bn.js": "^4.11.6",
    "@types/decimal.js": "^7.4.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "husky": "^7.0.1",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc --watch",
    "lint": "tsc --project ./tsconfig.json --noEmit && eslint --ext=jsx,ts,tsx src",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,md}": "yarn run prettier-format"
  }
}
